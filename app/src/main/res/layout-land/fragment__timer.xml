<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/timerFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <!-- Timer Display - Top Section -->
    <TextView
        android:id="@+id/textView"
        style="@style/textColorStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/digital7mono"
        android:gravity="center"
        android:text="@string/_00_00_00"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/unitValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/unitValue"
        style="@style/textColorStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/digital7mono"
        android:gravity="center"
        android:text="No Unit"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView"
        android:layout_marginEnd="16dp" />

    <!-- Main Content Area - Split Screen -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintBottom_toTopOf="@+id/buttons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp">

        <!-- Left Side - Dashboard Stats -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="8dp">

            <!-- Stats Titles -->
            <LinearLayout
                android:id="@+id/texts"
                style="@style/textColorStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:weightSum="3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textView3"
                    style="@style/TableText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/digital7"
                    android:text="Cycle/Min"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView4"
                    style="@style/TableText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/digital7"
                    android:text="Total Time"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView5"
                    style="@style/TableText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/digital7"
                    android:text="Cycle/Hour"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Stats Values -->
            <LinearLayout
                android:id="@+id/boxes"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginTop="4dp"
                android:weightSum="3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/texts">

                <TextView
                    android:id="@+id/cycPerMinute"
                    style="@style/totalScoreColor"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/textviewborder"
                    android:fontFamily="@font/digital7"
                    android:gravity="center"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/totalObservationTime"
                    style="@style/totalScoreColor"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/textviewborder"
                    android:fontFamily="@font/digital7"
                    android:gravity="center"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/cycPerHour"
                    style="@style/totalScoreColor"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/textviewborder"
                    android:fontFamily="@font/digital7"
                    android:gravity="center"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Min/Max/Mean Titles -->
            <LinearLayout
                android:id="@+id/titles"
                style="@style/TableText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:weightSum="3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/boxes">

                <TextView
                    style="@style/TableText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Min.Cyc"
                    android:textAlignment="center"
                    android:textSize="11sp" />

                <TextView
                    style="@style/TableText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Max.Cyc"
                    android:textAlignment="center"
                    android:textSize="11sp" />

                <TextView
                    style="@style/TableText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mean Cyc"
                    android:textAlignment="center"
                    android:textSize="11sp" />
            </LinearLayout>

            <!-- Min/Max/Mean Values -->
            <LinearLayout
                android:id="@+id/values"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginTop="4dp"
                android:weightSum="3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titles">

                <TextView
                    android:id="@+id/minVal"
                    style="@style/totalScoreColor"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/textviewborder"
                    android:fontFamily="@font/digital7"
                    android:gravity="center"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/maxVal"
                    style="@style/totalScoreColor"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/textviewborder"
                    android:fontFamily="@font/digital7"
                    android:gravity="center"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/aveVal"
                    style="@style/totalScoreColor"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/textviewborder"
                    android:fontFamily="@font/digital7"
                    android:gravity="center"
                    android:textSize="11sp" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Right Side - Lap List -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Lap List Headers -->
            <LinearLayout
                android:id="@+id/titlesforLaps"
                style="@style/textColorStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:weightSum="4">

                <TextView
                    style="@style/TableText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lap"
                    android:textAlignment="center"
                    android:textSize="12sp" />

                <TextView
                    style="@style/TableText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Value"
                    android:textAlignment="center"
                    android:textSize="12sp" />

                <TextView
                    style="@style/TableText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cycle"
                    android:textAlignment="center"
                    android:textSize="12sp" />

                <TextView
                    style="@style/TableText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Note"
                    android:textAlignment="center"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Lap List RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/lapList"
                style="@style/textColorStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="4dp"
                android:scrollbars="vertical" />
        </LinearLayout>
    </LinearLayout>

    <!-- Buttons - Bottom Section -->
    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button2"
            style="@style/ButtonAdjustmentStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="Start"
            android:textSize="12sp" />

        <Button
            android:id="@+id/button3"
            style="@style/ButtonAdjustmentStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:text="Lap"
            android:textSize="12sp" />

        <Button
            android:id="@+id/button4"
            style="@style/ButtonAdjustmentStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:text="Reset"
            android:textSize="12sp" />

        <Button
            android:id="@+id/button"
            style="@style/ButtonAdjustmentStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:text="Save"
            android:textSize="12sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>