<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Kronometre" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="thumbTint">@color/switch_thumb_selector</item>
        <item name="trackTint">@color/switch_track_selector</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="alertDialogTheme">@style/AlertDialogCustom</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
    <style name="Theme.Kronometre.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Kronometre.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Kronometre.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TableText">
        <item name="android:fontFamily">@font/digital7</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:padding">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <!--item name="android:autoSizeTextType">uniform</item-->

    </style>
    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">@color/white</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>

        <item name="android:backgroundTint">#f48fb1</item>

        <item name="android:typeface">sans</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#F44336</item>
        <item name="android:width">90dp</item>
        <item name="android:padding">0px</item>
    </style>

    <style name ="textColorStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name="menuStyle">
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:textColorPrimary">#f48fb1</item>

    </style>
    <style name="totalScoreColor">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
    </style>

  </resources>