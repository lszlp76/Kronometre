<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Kronometre" parent="Theme.MaterialComponents.DayNight.NoActionBar">>

    <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="thumbTint">@color/switch_thumb_selector</item>
        <item name="trackTint">@color/switch_track_selector</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="alertDialogTheme">@style/AlertDialogCustom</item>

    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
    <style name="Theme.Kronometre.NoActionBar" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- theme ayarlarÄ± -->

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>


    </style>

    <style name="Theme.Kronometre.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Kronometre.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TableText">
        <item name="android:fontFamily">@font/robotoflex</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>

        <!--item name="android:autoSizeTextType">uniform</item-->

    </style>
    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">@color/white</item>

        <item name="android:backgroundTint">#f48fb1</item>

        <item name="android:typeface">sans</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#F44336</item>
        <item name="android:width">90dp</item>
        <item name="android:padding">0px</item>
    </style>

    <style name ="textWidgetColorStyle">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/robotoflex</item>
    </style>


    <style name ="textColorStyle">
        <item name="android:textColor">@color/checked_track_color</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle"></item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/digital7</item>
    </style>
    <style name="MyTabLayoutStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextColor">@color/colorDisable</item>
        <item name="tabSelectedTextColor">#97E2E2</item>

        <item name="tabIconTint">@color/colorDisable</item>
        <item name="tabRippleColor">@color/colorDisable</item>
    </style>
    <style name ="textTitleColorStyle">
        <item name="android:textColor">@color/checked_track_color</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/digital7</item>
    </style>
    <style name="menuStyle">
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:textColorPrimary">#f48fb1</item>

    </style>
    <style name="totalScoreColor">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
    </style>
    <style name="MyNavigationViewStyle"  parent="Widget.AppCompat.TextView">
        <item name="android:textSize">24dp</item>

    </style>
    <style name="MyNavigationTextAppearance" parent="TextAppearance.AppCompat.Body1">

        <item name="android:fontFamily">@font/robotoflex</item>
        <item name="android:textSize">16sp</item>

    </style>
    <style name="Theme.App.Launcher" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/black</item>

        <item name="android:windowFullscreen">true</item>

    </style>
    <style name="WebPageTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/black</item>

        <item name="android:windowFullscreen">true</item>

    </style>
    <style name="SliderTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:fontFamily">@font/digital7</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:tint">@color/elektrikturuncu</item>

    </style>
<!-- In res/values/styles.xml -->
    <style name="ThemeOverlay.App.Switch" parent="">
        <!-- This points to your custom color state list for the thumb -->
        <item name="colorSwitchThumbNormal">@color/switch_thumb_selector</item>

        <!-- For newer Material Components, this attribute is often used for the thumb's "on" color -->
        <item name="colorControlActivated">@color/switch_thumb_selector</item>
    </style>
    <style name="ButtonAdjustmentStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:background">@drawable/glass_button_background</item>
        <item name="android:elevation">4dp</item>
        <item name="android:fontFamily">@font/robotoflex</item>
        <item name="android:textSize">17dp</item>


    </style>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorOnSurface">@color/switch_thumb_selector</item>
        <item name="colorSecondary">@color/switch_track_selector</item>
    </style>
  </resources>