<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/timerFragment"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:tag="timer"
    tools:context=".MainActivity">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        app:layout_constraintEnd_toStartOf="@+id/guideline6"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toTopOf="@+id/guideline">

        <RadioButton
            android:id="@+id/minuteButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:button="@android:drawable/btn_radio"

            android:text="@string/sn_second"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/cminuteButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:button="@android:drawable/btn_radio"

            android:text="@string/cmin"
            android:textSize="16sp" />


    </RadioGroup>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:stretchColumns="1"
        app:layout_constraintBottom_toTopOf="@+id/guideline7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toBottomOf="@+id/guideline4">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:padding="7dp"
                android:text="  "
                android:textAlignment="center"
                android:textSize="16sp"
                tools:ignore="RtlCompat"
                tools:layout_conversion_absoluteHeight="35dp"
                tools:layout_conversion_absoluteWidth="100dp"
                tools:layout_editor_absoluteX="37dp"
                tools:layout_editor_absoluteY="359dp" />

            <TextView

                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:padding="7dp"
                android:text="Second"
                android:textAlignment="center"
                android:textSize="16sp"


                />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="7dp"
                android:text="Cminute"
                android:textSize="14sp" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="7dp"
                android:text="Lap"
                android:textSize="16sp"
                tools:layout_conversion_absoluteHeight="35dp"
                tools:layout_conversion_absoluteWidth="40dp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="7dp"
                android:text="Min.Cyc.:"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="195dp"
                tools:layout_editor_absoluteY="365dp" />

            <TextView

                android:id="@+id/minval"
                android:layout_width="wrap_content"

                android:fontFamily="@font/digital7"
                android:gravity="center"
                android:padding="7dp"
                android:text="---"
                android:textColor="#0A24B5"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="126dp"
                tools:layout_editor_absoluteY="49dp" />

            <TextView
                android:id="@+id/minvalcmin"
                android:layout_width="130dp"
                android:layout_height="41dp"
                android:fontFamily="@font/digital7"
                android:gravity="center"
                android:padding="7dp"
                android:text="---"
                android:textColor="#0A24B5"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="51dp"
                tools:layout_editor_absoluteY="383dp" />

            <TextView
                android:id="@+id/lapnomin"
                android:layout_width="wrap_content"
                android:fontFamily="@font/digital7"
                android:gravity="center"
                android:padding="7dp"
                android:text="---"
                android:textColor="#0A24B5"
                android:textColorHighlight="@android:color/holo_green_light"
                android:textSize="18sp"
                android:textStyle="bold" />


        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:gravity="center"
                android:padding="7dp"
                android:text="Max.Cyc:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/maxval"
                android:layout_width="wrap_content"
                android:fontFamily="@font/digital7"
                android:gravity="center"
                android:padding="7dp"
                android:text="---"
                android:textColor="#0A24B5"
                android:textColorHighlight="@android:color/holo_green_light"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/maxvalcmin"
                android:layout_width="126dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/digital7"
                android:gravity="center"
                android:padding="7dp"
                android:text="---"
                android:textColor="#0A24B5"
                android:textColorHighlight="@android:color/holo_green_light"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="DuplicateIds"
                tools:layout_editor_absoluteX="179dp"
                tools:layout_editor_absoluteY="11dp" />

            <TextView
                android:id="@+id/lapnomax"
                android:fontFamily="@font/digital7"
                android:gravity="center"
                android:padding="7dp"
                android:text="---"
                android:textColor="#0A24B5"
                android:textSize="18sp"
                android:textStyle="bold" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="7dp"
                android:text="Ave.Cyc.:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/aveval"
                android:layout_width="wrap_content"

                android:fontFamily="@font/digital7"
                android:gravity="center"
                android:padding="7dp"
                android:text="---"
                android:textColor="#0A24B5"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/avevalcmin"
                android:layout_width="wrap_content"
                android:fontFamily="@font/digital7"
                android:gravity="center"
                android:padding="7dp"
                android:text="---"
                android:textColor="#0A24B5"
                android:textColorHighlight="@android:color/holo_green_light"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/laptotal"
                android:layout_width="wrap_content"
                android:fontFamily="@font/digital7"
                android:gravity="center"
                android:padding="7dp"
                android:text="---"
                android:textColor="#0A24B5"
                android:textSize="18sp"
                android:textStyle="bold" />
        </TableRow>


    </TableLayout>


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/digital7mono"
        android:text="00:00:00"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="48sp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="123dp"

        android:hint="Your laps are here"
        android:scrollbars="vertical"
        android:textAlignment="center"
        android:textColor="#2E7D32"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline7" />

    <Button
        android:id="@+id/button3"

        android:layout_width="82dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/btn_color"
        android:text="LAP"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toTopOf="@+id/guideline8"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/btn_color"
        android:text="Reset"
        app:layout_constraintBottom_toBottomOf="@+id/button3"
        app:layout_constraintEnd_toStartOf="@+id/guideline6"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toTopOf="@+id/guideline8"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/btn_color"
        android:onClick="save"
        android:text="Save"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toTopOf="@+id/guideline8"
        tools:ignore="MissingConstraints" />

    <Button
        android:id ="@id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/btn_color"
        android:baselineAligned="true"
        android:text="Start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline8"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.01" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="1.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.64" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />


</androidx.constraintlayout.widget.ConstraintLayout>