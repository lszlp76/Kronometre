<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/timerFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <!-- Timer Display -->
    <TextView
        android:id="@+id/textView"
        style="@style/textColorStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/digital7mono"
        android:gravity="center"
        android:text="@string/_00_00_00"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/unitValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:maxLines="1"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeMaxTextSize="60sp"

         />

    <TextView
        android:id="@+id/unitValue"
        style="@style/textColorStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/digital7mono"
        android:gravity="center"
        android:text="No Unit"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView"
        android:layout_marginEnd="20dp" />

    <!-- Dashboard Stats -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dashboard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="05dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <!-- Cycle per Min, Total Time, Cycle per Hour -->
        <LinearLayout
            android:id="@+id/texts"
            style="@style/textColorStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:weightSum="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView3"
                style="@style/TableText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/digital7"
                android:text="Cycle per Min."
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                style="@style/TableText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/digital7"
                android:text="Total Time"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                style="@style/TableText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/digital7"
                android:text="Cycle per Hour"
                android:textAlignment="center"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Values Boxes -->
        <LinearLayout
            android:id="@+id/boxes"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:weightSum="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/texts">

            <TextView
                android:id="@+id/cycPerMinute"
                style="@style/totalScoreColor"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/textviewborder"
                android:fontFamily="@font/digital7"
                android:gravity="center" />

            <TextView
                android:id="@+id/totalObservationTime"
                style="@style/totalScoreColor"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/textviewborder"
                android:fontFamily="@font/digital7"
                android:gravity="center" />

            <TextView
                android:id="@+id/cycPerHour"
                style="@style/totalScoreColor"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:background="@drawable/textviewborder"
                android:fontFamily="@font/digital7"
                android:gravity="center" />
        </LinearLayout>

        <!-- Min, Max, Mean Titles -->
        <LinearLayout
            android:id="@+id/titles"
            style="@style/TableText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:weightSum="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/boxes">

            <TextView
                style="@style/TableText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Min.Cyc"
                android:textAlignment="center" />

            <TextView
                style="@style/TableText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Max.Cyc"
                android:textAlignment="center" />

            <TextView
                style="@style/TableText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mean Cyc"
                android:textAlignment="center" />
        </LinearLayout>

        <!-- Min, Max, Mean Values -->
        <LinearLayout
            android:id="@+id/values"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_marginTop="8dp"
            android:weightSum="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titles">

            <TextView
                android:id="@+id/minVal"
                style="@style/totalScoreColor"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/textviewborder"
                android:fontFamily="@font/digital7"
                android:gravity="center" />

            <TextView
                android:id="@+id/maxVal"
                style="@style/totalScoreColor"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/textviewborder"
                android:fontFamily="@font/digital7"
                android:gravity="center" />

            <TextView
                android:id="@+id/aveVal"
                style="@style/totalScoreColor"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:background="@drawable/textviewborder"
                android:fontFamily="@font/digital7"
                android:gravity="center" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Lap List Section -->

    <!-- Lap List Headers -->
    <LinearLayout
        android:id="@+id/titlesforLaps"

        style="@style/textTitleColorStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dashboard"
        app:layout_constraintTop_toBottomOf="@id/dashboard"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:weightSum="4">

        <TextView
            style="@style/TableText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:text="Lap"
            android:gravity="center_vertical"
             />

        <TextView
            style="@style/TableText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Value"
            android:textAlignment="center"
            />

        <TextView
            style="@style/TableText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cycle"
            android:textAlignment="center"
             />

        <TextView
            style="@style/TableText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Note"
            android:textAlignment="center"
             />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lapList"
        style="@style/textColorStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@+id/buttons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titlesforLaps" />

    <!-- Buttons -->
    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button2"
            style="@style/ButtonAdjustmentStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Start" />

        <Button
            android:id="@+id/button3"
            style="@style/ButtonAdjustmentStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="Lap" />

        <Button
            android:id="@+id/button4"
            style="@style/ButtonAdjustmentStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="Reset" />

        <Button
            android:id="@+id/button"
            style="@style/ButtonAdjustmentStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Save" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>