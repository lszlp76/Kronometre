<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Kronometre" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#7AACE4</item>
        <item name="colorPrimaryVariant">#586FE4</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->

    </style>
    <!-- Customize your theme here. -->

    <style name="TableText">
        <item name="android:fontFamily">@font/robotoflex</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>

        <!--item name="android:autoSizeTextType">uniform</item-->

    </style>
    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">@color/white</item>

        <item name="android:backgroundTint">#4C90DD</item>

        <item name="android:typeface">sans</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="textColorStyle">
        <item name ="android:tint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>

    </style>

    <style name="menuStyle">
        <item name="android:actionMenuTextColor">@color/purple_200</item>
        <item name="android:textColorPrimary">#f48fb1</item>

    </style>

    <style name="totalScoreColor">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
    </style>
</resources>