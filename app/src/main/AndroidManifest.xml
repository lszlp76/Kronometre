<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lszlp.choronometre" >
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Kronometre">


        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-2013051048838339~7696349859"
          
          
          
          />
        <activity
            android:name="com.lszlp.choronometre.WebpagesActivities"
            android:exported="false"
            android:parentActivityName="com.lszlp.choronometre.MainActivity"
            android:screenOrientation="fullSensor"
            android:launchMode="singleInstance"/>
        <activity
            android:name="com.lszlp.choronometre.MainActivity"
            android:exported="true"
            android:configChanges="screenLayout|orientation|keyboardHidden"
            
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Kronometre.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- SHARING AYARLARI -->
        <provider
          android:name="androidx.core.content.FileProvider"
          android:authorities="com.lszlp.choronometre.fileprovider"
          android:exported="false"
          android:grantUriPermissions="true">
          
          <meta-data
            android:name="android.support.FILE_PROVIDER_PATHS"
            android:resource="@xml/path"/>
        </provider>
      
    </application>
    <!--android:label="@string/app_name"-->
</manifest>